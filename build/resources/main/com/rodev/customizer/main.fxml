<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Font?>
<VBox alignment="CENTER"
      spacing="25.0"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.rodev.customizer.MainController"
      minHeight="500.0" minWidth="720.0"
      prefHeight="500.0" prefWidth="720.0">
    <padding>
        <Insets bottom="50.0" left="50.0" right="50.0" top="50.0"/>
    </padding>

    <Label fx:id="selectFileToEdit" text="Select file to edit">
        <font>
            <Font name="Arial" size="25.0" />
        </font>
    </Label>
    <Button text="Select" onAction="#onHelloButtonClick"/>
</VBox>
